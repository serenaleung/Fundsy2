<h1><%= @campaign.title %></h1>
<p><%= @campaign.body %></p>
<p>Goal: <%= number_to_currency @campaign.goal %></p>
<p>End Date: <%= @campaign.end_date %></p>

<% @campaign.rewards.each do |reward| %>
  <div class="well col-md-4">
    <h3><%= reward.title %></h3>
    <p><%= reward.body %></p>
    <p><%= number_to_currency reward.amount %></p>
  </div>
<% end %>
